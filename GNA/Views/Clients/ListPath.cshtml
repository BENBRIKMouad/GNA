@model IEnumerable<GNA.Models.Path>
@{
    ViewBag.Title = "ListPath";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div  className="py-2 bg-primary text-white">
    <div className="container">
        <div className="row">
            <div className="col-md-6">
                <div class="display-2 text-center" >
                    Liste des itinéraire disponible
                </div>
            </div>
        </div>
    </div>
</div>

<hr />
<div  className="py-4 mb-4 bg-light">
    <div className="container">
        <div className="row">
            <div className="col-md-3">
                @Html.ActionLink(" + Demande d'ajout ", "AddPath", "", new { @class = "btn btn-light btn-block  " })
            </div>
        </div>
    </div>
</div>


<table class="table  table-striped my-5">
    <thead class="table-dark">
        <tr>

            <th>

                Ville de Départ
            </th>
            <th>

                Ville d'arrivé
            </th>
            <th>

                Heur de Départ
            </th>
            <th>
                Heur d'arrivé
            </th>
            <th>
                Capacité
            </th>
            <th>
                Prix
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FromCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureTime.Hour) :
                    @Html.DisplayFor(modelItem => item.DepartureTime.Minute)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArivalTime.Hour):
                    @Html.DisplayFor(modelItem => item.ArivalTime.Minute)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("S'abboner", "Subscribe", new { pathId = item.Id }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>